<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.BistroInterfaceController">

    <!-- קריאת נתונים מהטבלה Order -->
    <Button text="Load Orders" onAction="#onOrdersClick"/>

    <!-- פתיחת חלון עדכון Order -->
    <Button text="Update Order" onAction="#onTablesClick"/>

    <!-- יציאה -->
    <Button text="Exit" onAction="#onExitClick"/>

</VBox>
