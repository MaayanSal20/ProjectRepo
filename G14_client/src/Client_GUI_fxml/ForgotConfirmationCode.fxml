<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client_gui.ForgotConfirmationCodeController"
      spacing="12" alignment="CENTER" prefWidth="450" prefHeight="320">

    <Label text="Recover Confirmation Code" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label text="Enter BOTH phone and email:" />

<TextField fx:id="phoneField" promptText="Phone (required)"/>
<TextField fx:id="emailField" promptText="Email (required)"/>

    <Button text="Find Code" onAction="#onFindClick" prefWidth="200"/>

    <Label fx:id="resultLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <Label fx:id="statusLabel"/>

    <Button text="Back" onAction="#onBackClick" prefWidth="200"/>
</VBox>
