<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client_gui.SubscriberLoginController"
      spacing="20" alignment="CENTER" prefWidth="400" prefHeight="350"
      styleClass="root">

    <!-- Card -->
    <VBox spacing="18" alignment="CENTER" styleClass="card">

        <!-- Title -->
        <Label text="Subscriber Login" styleClass="title-label" />

        <!-- Input -->
        <TextField fx:id="subscriberIdField"
                   promptText="Enter subscriber code"
                   prefWidth="250"
                   styleClass="text-field"/>

        <!-- Status -->
        <Label fx:id="statusLabel"
               textFill="red"
               wrapText="true"
               prefWidth="250" />

        <!-- Buttons -->
        <HBox spacing="20" alignment="CENTER">
            <Button text="Login"
                    onAction="#onLoginClick"
                    prefWidth="120" />

            <Button text="Back"
                    onAction="#onBackClick"
                    prefWidth="120"
                    styleClass="secondary-button" />
        </HBox>

    </VBox>

    <padding>
        <Insets top="30" right="20" bottom="30" left="20"/>
    </padding>

</VBox>