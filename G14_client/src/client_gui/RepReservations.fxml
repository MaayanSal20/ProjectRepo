<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client_gui.RepReservationsController" prefWidth="900" prefHeight="600">

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Active Reservations" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Button text="Refresh" onAction="#onRefresh"/>
        <Button text="Back" onAction="#onBack"/>
    </HBox>

    <TableView fx:id="table" prefHeight="300">
        <columns>
            <TableColumn fx:id="colResId" text="ResId" prefWidth="70"/>
            <TableColumn fx:id="colCustomerId" text="CustomerId" prefWidth="90"/>
            <TableColumn fx:id="colTime" text="Reservation Time" prefWidth="170"/>
            <TableColumn fx:id="colDin" text="Num Of Diners" prefWidth="110"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="90"/>
            <TableColumn fx:id="colArrival" text="Arrival" prefWidth="140"/>
            <TableColumn fx:id="colLeave" text="Leave" prefWidth="140"/>
            <TableColumn fx:id="colCreated" text="Created At" prefWidth="140"/>
        </columns>
    </TableView>

    <Label text="Reservations per Day" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <BarChart fx:id="barChart">
        <xAxis>
            <CategoryAxis fx:id="xAxis"/>
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="yAxis"/>
        </yAxis>
    </BarChart>

</VBox>
