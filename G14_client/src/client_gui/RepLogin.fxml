<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client_gui.RepLoginController"
      spacing="12" alignment="CENTER" prefWidth="400" prefHeight="300">

    <Label text="Representative Login" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

	<Label fx:id="statusLabel"
       text=""
       style="-fx-text-fill: red;"
       wrapText="true"/>
	

    <TextField fx:id="usernameField" promptText="Username" prefWidth="250"/>
    <PasswordField fx:id="passwordField" promptText="Password" prefWidth="250"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Login" onAction="#onLoginClick" prefWidth="120"/>
        <Button text="Back" onAction="#onBackClick" prefWidth="120"/>
    </HBox>

    <Label fx:id="msgLabel" text="" />
</VBox>
