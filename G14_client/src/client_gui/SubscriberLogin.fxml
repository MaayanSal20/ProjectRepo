<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client_gui.SubscriberLoginController"
      spacing="15" alignment="CENTER" prefWidth="400" prefHeight="300">

    <Label text="Subscriber Login" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <TextField fx:id="subscriberCodeField" promptText="Enter subscriber code" prefWidth="220"/>
    <Label fx:id="errorLabel" textFill="red" wrapText="true" prefWidth="220"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Login" onAction="#onLoginClick" prefWidth="100"/>
        <Button text="Back" onAction="#onBackClick" prefWidth="100"/>
    </HBox>

</VBox>
